@model List<SistemaGerenciadorBiblioteca.Models.AlunosModel>
@{
    ViewData["Title"] = "Listagem de Alunos";
}

<div class="text-center">
    <h1 class="display-4">Lista de Alunos</h1>
    <a class="btn btn-success" role="button" style="float: left" asp-controller="Alunos" asp-action="Adicionar_aluno">Adicionar Aluno</a>
    <br />
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID Sistema</th>
                <th scope="col">RM</th>
                <th scope="col">Nome Aluno</th>
                <th scope="col">Turma</th>
                <th scope="col">Nome Responsável</th>
                <th scope="col">Celular/Telefone Responsável</th>
                <th scope="col">E-mail Responsável</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aluno in Model)
            {
                <tr>
                    <th scope ="row">@aluno.Id_aluno</th>
                    <td>@aluno.Rm</td>
                    <td>@aluno.Nome_Aluno</td>
                    <td>@aluno.Turma</td>
                    <td>@aluno.Nome_Responsavel</td>
                    <td>@aluno.Celular</td>
                    <td>@aluno.Email</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <a role="button" class="btn btn-warning" asp-router-id="@aluno.Id_aluno" asp-controller="Alunos" asp-action="Editar_alunos">Editar</a>
                            <a role="button" class="btn btn-danger" asp-router-id="@aluno.Id_aluno" asp-controller="Alunos" asp-action="Deletar_alunos">Deletar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
